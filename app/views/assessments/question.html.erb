<% content_for :title, "#{@current_question.text} - Insurance Assessment" %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Progress Bar -->
    <div class="mb-8">
      <div class="flex items-center justify-between text-sm text-gray-600 mb-2">
        <span>Progress</span>
        <span><%= @progress_percentage %>% complete</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-blue-600 h-2 rounded-full transition-all duration-300" 
             style="width: <%= @progress_percentage %>%"></div>
      </div>
    </div>

    <!-- Question Card -->
    <div class="bg-white rounded-lg shadow-lg p-8">
      
      <!-- Question Header -->
      <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-900 mb-3">
          <%= @current_question.text %>
        </h1>
        
        <% if @current_question.has_description? %>
          <p class="text-gray-600 mb-4">
            <%= @current_question.description %>
          </p>
        <% end %>
        
        <% if @current_question.has_help_text? %>
          <div class="bg-blue-50 border-l-4 border-blue-400 p-4 rounded">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-blue-700">
                  <%= @current_question.help_text %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Answer Form -->
      <%= form_with url: assessment_answer_path(@assessment.session_id), 
                    method: :post, 
                    local: true, 
                    class: "space-y-6" do |form| %>
        
        <%= hidden_field_tag :question_id, @current_question.id %>
        
        <!-- Answer Input Based on Question Type -->
        <div class="space-y-4">
          <% if @current_question.question_type == 'single_choice' %>
            <div class="space-y-3">
              <% @current_question.formatted_answer_options.each do |option| %>
                <label class="relative flex items-start p-4 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50 transition-colors">
                  <%= radio_button_tag 'response[answer_text]', option[:value], 
                                      @existing_response&.answer_text == option[:value],
                                      class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300",
                                      required: @current_question.required %>
                  <div class="ml-3 text-sm">
                    <span class="font-medium text-gray-900 block"><%= option[:label] %></span>
                    <% if option[:description] %>
                      <span class="text-gray-500"><%= option[:description] %></span>
                    <% end %>
                  </div>
                </label>
              <% end %>
            </div>
          
          <% elsif @current_question.question_type == 'multiple_choice' %>
            <div class="space-y-3">
              <% existing_answers = @existing_response&.array_answer || [] %>
              <% @current_question.formatted_answer_options.each do |option| %>
                <label class="relative flex items-start p-4 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50 transition-colors">
                  <%= check_box_tag 'response[answer_text][]', option[:value], 
                                   existing_answers.include?(option[:value]),
                                   class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300 rounded" %>
                  <div class="ml-3 text-sm">
                    <span class="font-medium text-gray-900 block"><%= option[:label] %></span>
                    <% if option[:description] %>
                      <span class="text-gray-500"><%= option[:description] %></span>
                    <% end %>
                  </div>
                </label>
              <% end %>
            </div>
          
          <% elsif @current_question.question_type == 'dropdown' %>
            <%= select_tag 'response[answer_text]', 
                          options_for_select([['Choose an option...', '']] + 
                                           @current_question.formatted_answer_options.map { |opt| [opt[:label], opt[:value]] }, 
                                           @existing_response&.answer_text),
                          class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md",
                          required: @current_question.required %>
          
          <% elsif @current_question.question_type == 'text_input' %>
            <%= text_field_tag 'response[answer_text]', 
                              @existing_response&.answer_text,
                              placeholder: "Enter your answer...",
                              class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md",
                              required: @current_question.required %>
          
          <% elsif @current_question.question_type == 'number_input' %>
            <%= number_field_tag 'response[answer_text]', 
                                @existing_response&.answer_text,
                                placeholder: "Enter a number...",
                                min: 0,
                                class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md",
                                required: @current_question.required %>
          <% end %>
        </div>

        <!-- Additional Notes (Optional) -->
        <div>
          <label for="additional_notes" class="block text-sm font-medium text-gray-700">
            Additional notes (optional)
          </label>
          <%= text_area_tag 'response[additional_notes]', 
                           @existing_response&.additional_notes,
                           rows: 3,
                           placeholder: "Any additional context or details...",
                           class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>

        <!-- Action Buttons -->
        <div class="flex justify-between items-center pt-6">
          <% if @assessment.responses.any? %>
            <%= link_to assessment_back_path(@assessment.session_id), 
                       class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors" do %>
              <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
              Back
            <% end %>
          <% else %>
            <div></div>
          <% end %>

          <%= submit_tag "Continue", 
                        class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>
        </div>
      <% end %>
    </div>

    <!-- Question Category Context -->
    <% if @current_question.category.present? %>
      <div class="mt-4 text-center">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
          <%= @current_question.category.humanize %> Questions
        </span>
      </div>
    <% end %>
  </div>
</div>

<!-- Enhanced mobile experience with JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Auto-focus on the first input/select element
  const firstInput = document.querySelector('input[type="radio"], input[type="checkbox"], select, input[type="text"], input[type="number"]');
  if (firstInput && firstInput.type !== 'radio' && firstInput.type !== 'checkbox') {
    firstInput.focus();
  }
  
  // Add keyboard navigation for radio buttons
  const radioButtons = document.querySelectorAll('input[type="radio"]');
  radioButtons.forEach((radio, index) => {
    radio.addEventListener('keydown', function(e) {
      if (e.key === 'ArrowDown' || e.key === 'ArrowRight') {
        e.preventDefault();
        const nextIndex = (index + 1) % radioButtons.length;
        radioButtons[nextIndex].focus();
        radioButtons[nextIndex].checked = true;
      } else if (e.key === 'ArrowUp' || e.key === 'ArrowLeft') {
        e.preventDefault();
        const prevIndex = index === 0 ? radioButtons.length - 1 : index - 1;
        radioButtons[prevIndex].focus();
        radioButtons[prevIndex].checked = true;
      }
    });
  });
});
</script>
